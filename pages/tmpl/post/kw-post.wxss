.highlight {
  color:dodgerblue;
}

.rich {
  box-sizing: border-box;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  padding: 8rpx;
  width: 100%;
}

.rich image {
  box-sizing: border-box;
  min-width: 80rpx;
  width: 80rpx;
  height: 80rpx;
  padding: 12rpx;
  margin-right: 8rpx;
}

.rich text {
  color: #333;
  font-size: 30rpx;
  line-height: 32rpx;
  
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}