page {
    background-color:#fff;
}

.h1 {
  font-weight:bold; 
  text-align:center;
  margin-bottom: 18rpx; 
  font-size:42rpx;
}

.app {
  display: flex;
  align-items: flex-end;
  padding: 24rpx 18rpx;
  background-color: rgba(0, 0, 0, .3);
}

.app image {
  border: 6rpx solid white;
  border-radius: 16rpx;
  width: 128rpx;
  height: 128rpx;
  margin-right: 12rpx;
  margin-top: 40rpx;
}

.app .name {
  margin-top: 96rpx;
  color: white;
  margin-bottom: 12rpx;
  text-align: center;
  font-size: 34rpx;
}

.count {
  margin: 12rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.count .v {
  margin-top: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.count view {
  font-weight: bold;
  font-size: 32rpx;
}

.detail {
  margin: 24rpx;
  padding: 32rpx;
  box-shadow: 0 0 6px 0px rgba(0, 0, 0, 0.1);
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #666;
}

.-title {
  font-size: 32rpx;
  font-weight: bold;
}

.text {
  font-size: 30rpx;
  margin-top: 24rpx;
  height: 200rpx;
}

.m {
  margin: 8rpx 0rpx;
  height: 1rpx;
  background: #f8f8f8;
}

.tip {
  text-align:center;
  font-size: 30rpx;
  color: gray;
}

.input {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.input .name {
  color: #666;
  font-weight: 500;
  margin-right: 12rpx;
}

.input .btn {
  position: relative;
  margin-left: 32rpx;
  text-align: center;
}

.underline {
  width: 100%;
  height: 1px;
  background: #1890FF;
  opacity: 1;
  position: absolute;
  z-index: 0;
  bottom: 7rpx;
}

.fixed {
  position: fixed;
  bottom: 24rpx;
  width: 100%;
}

.fixed button {
  width: 80%;
  margin: 0px auto;
}